<%= line_chart [{name: 'Doanh Thu', data: @order_details.sum(:price)}, {name: 'Lợi Nhuận', data: @order_details.sum(:revenue)}] %>
<div class="devider"></div>
<div class="horizontal-menu">
  <% @cases.each do |filtered_case| %>
    <div class="case-item">
      <img src="<%= filtered_case.image %>">
      <div>
        <span class="bold"><%= filtered_case.name %><br></span>
      </div>
      <div class="control">
        <a class="modal-trigger" href="#modal1" data-id="<%= filtered_case.id %>">
          <img src="<%= image_url('remove-icon.png') %>">
        </a>
        <a class="js-create-order" data-id="<%= filtered_case.id %>">
          <img src="<%= image_url('add-icon.png') %>">
        </a>
      </div>
    </div>
  <% end %>
</div>
<div class="materialize">
  <div id="modal1" class="modal bottom-sheet">
  </div>
</div>
