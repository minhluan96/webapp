<div style="padding: 0 20px;">
  <input type="hidden" value="1" id="current-page">
  <div class="materialize horizontal-menu" data-category-id="<%= @category_id %>" id="category-control">
    <%= link_to tempered_glass_cases_path(category_id: -1) do %>
      <div class="chip <%= (@category_id == 0 or @category_id == -1) ? 'active' : '' %>">
        All
        <i class="close material-icons">phone_iphone</i>
      </div>
    <% end %>
    <% @tempered_glass_categories.each do |category| %>
      <%= link_to tempered_glass_cases_path(category_id: category.id) do %>
        <div class="chip <%= @category_id == category.id ? 'active' : '' %>">
          <%= category.name %>
          <i class="close material-icons">phone_iphone</i>
        </div>
      <% end %>
    <% end %>
  </div>
  <div id="filtered-products">
    <%= render 'mobile_filtered_products', cases: @cases %>
  </div>
  <div class="materialize center-text hide" id="preloader">
    <div class="preloader-wrapper small active">
      <div class="spinner-layer">
        <div class="circle-clipper left">
          <div class="circle"></div>
        </div>
        <div class="gap-patch">
          <div class="circle"></div>
        </div>
        <div class="circle-clipper right">
          <div class="circle"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="materialize">
    <a class="btn-floating btn-large" onclick="$('html, body').animate({ scrollTop: 0 }, 'slow');"><i class="material-icons">arrow_upward</i></a>
  </div>
</div>
<script>
    new window.ScrollToLoadView('<%= j request.base_url %><%= j mobile_filter_cases_cases_path() %>')
</script>