<div class="filtered-products">
  <% @cases.each do |filtered_case| %>
    <div class="product-item">
      <img src="<%= filtered_case.image %>">
      <%= filtered_case.name %><br>
      <%= filtered_case.formatted_price %>
    </div>
  <% end %>
  <%= paginate @cases %>
</div>