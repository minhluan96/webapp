<div class="filter">
  <div class="filter__title">
    Shop by
  </div>
  <div class="filter__control">
    Collection
    <ul>
      <li>
        All
      </li>
      <li>
        Iphone 6
      </li>
      <li>
        Iphone 6 Plus
      </li>
